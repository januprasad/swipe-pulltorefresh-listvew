<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.jenuine.swipelistview" android:versionCode="6" android:versionName="1.13">

  <uses-sdk android:minSdkVersion="8"
            android:targetSdkVersion="8" />

    <application
            android:icon="@drawable/icon"
            android:label="@string/appName"
            android:theme="@style/Theme.SwipeListView"
            android:hardwareAccelerated="true">

        <activity android:name=".sample.activities.SwipeListViewExampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".sample.activities.SettingsActivity" android:windowSoftInputMode="stateAlwaysHidden"/>

    </application>

</manifest>

